<header>
  <div class="max-w-screen-xl px-4 mx-auto sm:py-12 sm:px-6 lg:px-8">
    <%= button_to "Back", posts_path, method: :get, class: "inline-flex items-center justify-center px-5 py-3 text-gray-500 transition border border-gray-200 rounded-lg hover:text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring" %>
  </div>
</header>
<section>
  <div class="max-w-screen-xl px-4 py-16 mx-auto sm:px-6 lg:px-8 sm:py-24">
    <div class="max-w-3xl">
      <h2 class="text-3xl font-bold sm:text-4xl">
        <%= @post.title %>
      </h2>
    </div>
    <div class="grid grid-cols-1 gap-8 mt-8 ">
      <div class="">
        <article class="space-y-4 text-gray-600">
          <p>
            <%= @post.body %>
          </p>
        </article>
      </div>
    </div>
  </div>
</section>
